Wants=network-online.target

[Service]
Type=oneshot
User=zenosama
WorkingDirectory=/home/zenosama
Environment="HOME=/home/zenosama"
ExecStart=/opt/pve-setup/setup-pve-workstation-phase2.sh

[Install]
